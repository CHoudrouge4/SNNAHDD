CC = g++
CFLAGS = -g -Wall
C = -c
VERSION = -std=c++14
OUTPUT  = client
SOURCES = main.cpp rkd_tree.cpp
OBJECTS = $(SOURCES:.cpp=.o)
REMOVE  = client  *.o

$(OUTPUT): $(OBJECTS)
	$(CC) $(CFLAGS) $(VERSION) $(OBJECTS) -o $(OUTPUT) -lpthread 
main.o: main.cpp rkd_tree.cpp rkd_tree.h node.h
	$(CC) $(VERSION) $(C) $(CFLAGS) main.cpp -lpthread
rkd_tree.o: rkd_tree.cpp rkd_tree.h node.h
	$(CC) $(VERSION) $(C) $(CFLAGS) rkd_tree.cpp -lpthread
.PHONY: clean
clean:
	@rm -rf $(REMOVE)
